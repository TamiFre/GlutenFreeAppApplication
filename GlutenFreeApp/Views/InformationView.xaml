<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlutenFreeApp.Views.InformationView"
             Title="InformationView">
    <VerticalStackLayout>
        <Label 
            Text="Random Fun Facts!"
            VerticalOptions="Center" 
            FontSize="60"
            HorizontalOptions="Center" />

        <Label
            HorizontalOptions="Center"
            Text="{Binding CurrentFact}"
            />

        <Button
            HorizontalOptions="Center"
            Text="If You Dont Want To wait For the Random Fact - Press Here!"
            Command="{Binding GetRandomFactCommand}"
            />

        <!--There will be something that rotates between the facts. the facts are added in the admin page and will be in a list-->
    </VerticalStackLayout>
</ContentPage>