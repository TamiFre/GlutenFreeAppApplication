<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GlutenFreeApp.Views.LoginPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ViewModel="clr-namespace:GlutenFreeApp.ViewModel"
    Title="LoginPageView"
    x:DataType="ViewModel:LoginPageViewModel">
    

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="20">
            

            <!-- Main Content -->
            <VerticalStackLayout
                Grid.Row="1"
                
                IsEnabled="{Binding NotInServerCall}"
                Spacing="15">

                <!-- Header -->
                <Label
                    Text="Welcome Back!"
                    FontFamily="TorontoFont"
                    FontSize="48"
                    HorizontalOptions="Center"
                    Margin="0,0,0,20"
                    />

                <!-- Login Form -->
                <Frame
                    BorderColor="Transparent"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#343a40}"
                    CornerRadius="15"
                    Padding="20"
                    HasShadow="True">

                    <VerticalStackLayout Spacing="15">
                        <!-- Username Entry -->
                        <Frame
                            Padding="15,5"
                            BorderColor="Transparent"
                            BackgroundColor="{AppThemeBinding Light=#f8f9fa, Dark=#495057}"
                            CornerRadius="10">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label 
                                    Text="ðŸ‘¤" 
                                    VerticalOptions="Center"
                                    FontSize="20"/>
                                <Entry
                                    Grid.Column="1"
                                    x:Name="UsernameEntry"
                                    Text="{Binding UserName}"
                                    Placeholder="Username"
                                    Style="{StaticResource DefaultEntry}"
                                    BackgroundColor="Transparent"
                                   />
                            </Grid>
                        </Frame>

                        <!-- Password Entry -->
                        <Frame
                            Padding="15,5"
                            BorderColor="Transparent"
                            BackgroundColor="{AppThemeBinding Light=#f8f9fa, Dark=#495057}"
                            CornerRadius="10">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label 
                                    Text="ðŸ”‘" 
                                    VerticalOptions="Center"
                                    FontSize="20"/>
                                <Entry
                                    Grid.Column="1"
                                    x:Name="PasswordEntry"
                                    Text="{Binding Password}"
                                    IsPassword="True"
                                    Placeholder="Password"
                                    Style="{StaticResource DefaultEntry}"
                                    BackgroundColor="Transparent"
                                    />
                            </Grid>
                        </Frame>

                        <!-- Email Entry -->
                        <Frame
                            Padding="15,5"
                            BorderColor="Transparent"
                            BackgroundColor="{AppThemeBinding Light=#f8f9fa, Dark=#495057}"
                            CornerRadius="10">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label 
                                    Text="ðŸ“§" 
                                    VerticalOptions="Center"
                                    FontSize="20"/>
                                <Entry
                                    Grid.Column="1"
                                    x:Name="EmailEntry"
                                    Text="{Binding UserEmail}"
                                    Placeholder="Email"
                                    Style="{StaticResource DefaultEntry}"
                                    BackgroundColor="Transparent"
                                    />
                            </Grid>
                        </Frame>

                        <!-- Error Message -->
                        <Label 
                            Text="{Binding ErrorMsg}"
                            TextColor="#dc3545"
                            FontSize="14"
                            HorizontalOptions="Center"/>

                        <!-- Login Button -->
                        <Button
                            Style="{StaticResource buttonStyle}"
                            x:Name="LoginButton"
                            Text="Log In"
                            Command="{Binding LoginCommand}"
                            CornerRadius="25"
                            FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Bottom Options -->
            <VerticalStackLayout
                Grid.Row="2"
                Spacing="15"
                Margin="0,20,0,0">

                <Label 
                    Text="Don't have an account?"
                    HorizontalOptions="Center"
                    TextColor="{AppThemeBinding Light=#6c757d, Dark=#adb5bd}"/>

                <Button
                    Text="Sign Up"
                    Command="{Binding TransferToSignUp}"
                    BackgroundColor="Transparent"
                    TextColor="#7209b7"
                    BorderColor="#7209b7"
                    BorderWidth="1"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontAttributes="Bold"/>

                <Button
                    Text="Continue without login"
                    Command="{Binding TransferToInfo}"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light=#6c757d, Dark=#adb5bd}"
                    FontSize="14"
                    HeightRequest="40"/>

                <ActivityIndicator
                    IsRunning="{Binding InServerCall}"
                    Color="#7209b7"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>