<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GlutenFreeApp.Views.AllRecipeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:GlutenFreeApp.Models"
    xmlns:viewModels="clr-namespace:GlutenFreeApp.ViewModel"
    Title="AllRecipeView">
    <VerticalStackLayout>
        <Label
            Margin="0,0,0,30"
            FontFamily="TorontoFont"
            FontSize="50"
            HorizontalOptions="CenterAndExpand"
            Text="All Recipes" />


        <Picker
            x:Name="FoodTypePicker"
            Title="Select recipe type"
            Margin="0,0,0,10"
            HeightRequest="60"
            SelectedIndex="{Binding TypeFoodSelected}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>ShowAll</x:String>
                    <x:String>Italian</x:String>
                    <x:String>Asian</x:String>
                    <x:String>Mexican</x:String>
                    <x:String>BBQ</x:String>
                    <x:String>French</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button
            
            Margin="0,0,0,60"
Style="{StaticResource buttonStyle}"
WidthRequest="300"

            Command="{Binding SearchByFoodTypeSelected}"
            Text="Search by the food type" />

        <CollectionView
            x:Name="PendingRecipesList"
            HeightRequest="300"
            ItemsSource="{Binding RecipesCol}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:RecipeInfo">
                    <Frame Margin="0,5" Padding="10">
                        <Grid ColumnDefinitions="*,*,*" RowDefinitions="*">
                            <Frame 
HeightRequest="80" 
WidthRequest="80" 
CornerRadius="60" 
Padding="0" 
HasShadow="False" 
HorizontalOptions="Center" 
VerticalOptions="Center">
                                <Image 
    Source="{Binding FullImagePath}" 
    Aspect="AspectFill" 
    HeightRequest="60" 
    WidthRequest="60" 
                                    Grid.Column="0"
    HorizontalOptions="Center" 
    VerticalOptions="Center" />
                            </Frame>
                            <Label Grid.Column="1" Text="{Binding RecipeHeadLine}" />
                            <Label Grid.Column="2" Text="{Binding TypeFoodName}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>