<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlutenFreeApp.Views.UpdateRestaurantProfileView"
             Title="UpdateRestaurantProfileView">
    <VerticalStackLayout Padding="20" Spacing="15" IsEnabled="{Binding NotInServerCall}">
        <!-- Header -->
        <Label 
    Text="Update Restaurant"
    FontSize="40"
    HorizontalOptions="Center"
    Margin="0,0,0,20"/>

        <!-- Username Entry -->
        <Label 
    Text="Restaurant Name:"
    FontSize="16"
    Margin="0,0,0,5"/>
        <Entry
    x:Name="RestaurantName"
    Placeholder="Enter your restaurant name"
    Text="{Binding UserName}"
    HeightRequest="50"
    VerticalTextAlignment="Center"/>

        <!-- address Entry -->
        <Label 
    Text="Address:"
    FontSize="16"
    Margin="0,0,0,5"/>
        <Entry
    x:Name="AddressEntry"
    Placeholder="Enter your address"
    Text="{Binding Password}"
    IsPassword="True"
    HeightRequest="50"
    VerticalTextAlignment="Center"/>

        <!-- Error Message -->

        <Label Text="{Binding PasswordError}" IsVisible="{Binding ShowPasswordError}"  />

        <!-- Submit Button -->
        <Button
    Text="Update Restaurant"
    x:Name="UpdateButton"
    BackgroundColor="Purple"
    Command="{Binding SubmitCommand}"
    Margin="0,20,0,0"/>

        <!-- Separator -->
        <BoxView 
    HeightRequest="1"
    Color="LightGray"
    Margin="0,20"/>

        <!-- Additional Options -->

        <ActivityIndicator IsRunning="{Binding InServerCall}" 
    Color="Red" 
    VerticalOptions="Center" 
    HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>