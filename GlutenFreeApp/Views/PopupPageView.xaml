<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GlutenFreeApp.Views.PopupPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:GlutenFreeApp.Models"
    Title="PopupPageView">
    <Frame
        Margin="20"
        Padding="20"
        BackgroundColor="{AppThemeBinding Light=White,
                                          Dark=#343a40}"
        BorderColor="Transparent"
        CornerRadius="15"
        HasShadow="True">

        <VerticalStackLayout Spacing="20">
            <!--  Header  -->
            <Label
                Margin="0,0,0,10"
                FontFamily="TorontoFont"
                FontSize="48"
                HorizontalOptions="Center"
                Text="Critics"
                TextColor="{AppThemeBinding Light=#212529,
                                            Dark=#f8f9fa}" />

            <!--  Critics List  -->
            <CollectionView Margin="0,0,0,20" ItemsSource="{Binding CriticCol}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:CriticInfo">
                        <Frame
                            Margin="0,5"
                            Padding="15"
                            BackgroundColor="{AppThemeBinding Light=#f8f9fa,
                                                              Dark=#495057}"
                            BorderColor="Transparent"
                            CornerRadius="10"
                            HasShadow="False">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                <Label
                                    FontSize="16"
                                    LineBreakMode="WordWrap"
                                    Text="{Binding CriticText}"
                                    TextColor="{AppThemeBinding Light=#212529,
                                                                Dark=White}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!--  Empty State  -->
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label
                            HorizontalOptions="Center"
                            Text="No critics yet"
                            TextColor="{AppThemeBinding Light=#6c757d,
                                                        Dark=#adb5bd}" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>

            <!--  Close Button  -->
            <Button
                Margin="0,10,0,0"
                Command="{Binding CloseCommand}"
                CornerRadius="25"
                FontAttributes="Bold"
                HeightRequest="50"
                HorizontalOptions="Fill"
                Style="{StaticResource buttonStyle}"
                Text="Close"
                TextColor="White" />
        </VerticalStackLayout>
    </Frame>
</ContentPage>