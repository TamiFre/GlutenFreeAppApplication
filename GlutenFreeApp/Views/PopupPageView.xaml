<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlutenFreeApp.Views.PopupPageView"
             xmlns:models="clr-namespace:GlutenFreeApp.Models"
             
             Title="PopupPageView">
    <VerticalStackLayout>
        <Label Text="Critics" FontSize="20" HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding CriticCol}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:CriticInfo">
                    <Frame Padding="10" Margin="5">
                        <Label Text="{Binding CriticText}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Close" Command="{Binding CloseCommand}" />
    </VerticalStackLayout>
</ContentPage>