<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GlutenFreeApp.Views.UpdateProfileView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="UpdateProfileView">
    <ScrollView>
        <Grid Padding="20" RowDefinitions="Auto,*,Auto">

            <!--  Main Content  -->
            <VerticalStackLayout
                Grid.Row="1"
                IsEnabled="{Binding NotInServerCall}"
                Spacing="15">

                <!--  Header  -->
                <Label
                    Margin="0,0,0,20"
                    FontFamily="TorontoFont"
                    FontSize="48"
                    HorizontalOptions="Center"
                    Text="Update Profile" />

                <!--  Update Form  -->
                <Frame
                    Padding="20"
                    BackgroundColor="{AppThemeBinding Light=White,
                                                      Dark=#343a40}"
                    BorderColor="Transparent"
                    CornerRadius="15"
                    HasShadow="True">

                    <VerticalStackLayout Spacing="15">
                        <!--  Username Entry  -->
                        <Frame
                            Padding="15,5"
                            BackgroundColor="{AppThemeBinding Light=#f8f9fa,
                                                              Dark=#495057}"
                            BorderColor="Transparent"
                            CornerRadius="10">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label
                                    FontSize="20"
                                    Text="ðŸ‘¤"
                                    VerticalOptions="Center" />
                                <Entry
                                    x:Name="UsernameEntry"
                                    Grid.Column="1"
                                    BackgroundColor="Transparent"
                                    Placeholder="Enter your username"
                                    Style="{StaticResource DefaultEntry}"
                                    Text="{Binding UserName}" />
                            </Grid>
                        </Frame>

                        <!--  Password Entry  -->
                        <Frame
                            Padding="15,5"
                            BackgroundColor="{AppThemeBinding Light=#f8f9fa,
                                                              Dark=#495057}"
                            BorderColor="Transparent"
                            CornerRadius="10">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label
                                    FontSize="20"
                                    Text="ðŸ”‘"
                                    VerticalOptions="Center" />
                                <Entry
                                    x:Name="PasswordEntry"
                                    Grid.Column="1"
                                    BackgroundColor="Transparent"
                                    IsPassword="True"
                                    Placeholder="Enter your password"
                                    Style="{StaticResource DefaultEntry}"
                                    Text="{Binding Password}" />
                            </Grid>
                        </Frame>

                        <!--  Password Error Message  -->
                        <Label
                            FontSize="14"
                            HorizontalOptions="Center"
                            IsVisible="{Binding ShowPasswordError}"
                            Text="{Binding PasswordError}"
                            TextColor="#dc3545" />

                        <!--  Email Entry  -->
                        <Frame
                            Padding="15,5"
                            BackgroundColor="{AppThemeBinding Light=#f8f9fa,
                                                              Dark=#495057}"
                            BorderColor="Transparent"
                            CornerRadius="10">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label
                                    FontSize="20"
                                    Text="ðŸ“§"
                                    VerticalOptions="Center" />
                                <Entry
                                    x:Name="EmailEntry"
                                    Grid.Column="1"
                                    BackgroundColor="Transparent"
                                    Placeholder="Enter your email"
                                    Style="{StaticResource DefaultEntry}"
                                    Text="{Binding UserEmail}" />
                            </Grid>
                        </Frame>

                        <!--  Email Error Message  -->
                        <Label
                            FontSize="14"
                            HorizontalOptions="Center"
                            IsVisible="{Binding ShowEmailError}"
                            Text="{Binding EmailError}"
                            TextColor="#dc3545" />

                        <!--  Submit Button  -->
                        <Button
                            x:Name="UpdateButton"
                            BackgroundColor="Purple"
                            Command="{Binding SubmitCommand}"
                            CornerRadius="25"
                            FontAttributes="Bold"
                            Text="Update Profile" />

                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!--  Bottom Options  -->
            <VerticalStackLayout
                Grid.Row="2"
                Margin="0,20,0,0"
                Spacing="15">

                <!--  Activity Indicator  -->
                <ActivityIndicator
                    HorizontalOptions="Center"
                    IsRunning="{Binding InServerCall}"
                    Color="#7209b7" />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>