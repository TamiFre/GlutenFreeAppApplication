<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GlutenFreeApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GlutenFreeApp"
    xmlns:views="clr-namespace:GlutenFreeApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="GlutenFreeApp">

   

    <TabBar>

        <ShellContent
            Title="sign up"
            ContentTemplate="{DataTemplate views:SignUpView}"
            Route="SignUp" />
        <ShellContent
            Title="login"
            ContentTemplate="{DataTemplate views:LoginPageView}"
            Route="Login" />
        <ShellContent
             Title="addcritic"
            ContentTemplate="{DataTemplate views:AddCriticView}"
             Route="AddCritic" />
        <ShellContent
            Title="all recipes"
            ContentTemplate="{DataTemplate views:AllRecipeView}"
            Route="AllRecipes"
            />
        <ShellContent
            Title="add recipe"
            ContentTemplate="{DataTemplate views:AddRecipeView}"
            Route="AddRecipe"
            />
        <ShellContent
            Title="admin page"
            ContentTemplate="{DataTemplate views:AdminPageView}"
            Route="AdminPage"
            />
        
        <!--add info page-->
        <!--<ShellContent
            Title="info page"
            ContentTemplate="{DataTemplate views:}"
            />-->

    </TabBar>

</Shell>
