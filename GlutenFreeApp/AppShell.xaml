<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GlutenFreeApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GlutenFreeApp"
    xmlns:views="clr-namespace:GlutenFreeApp.Views"
    Title="GlutenFreeApp"
    Shell.FlyoutBehavior="Disabled">



    <TabBar>

        <ShellContent
            Title="sign up"
            ContentTemplate="{DataTemplate views:SignUpView}"
            Route="SignUp" />
        <ShellContent
            Title="addcritic"
            ContentTemplate="{DataTemplate views:AddCriticView}"
            Route="AddCritic" />
        <ShellContent
            Title="all recipes"
            ContentTemplate="{DataTemplate views:AllRecipeView}"
            Route="AllRecipes" />
        <ShellContent
            Title="add recipe"
            ContentTemplate="{DataTemplate views:AddRecipeView}"
            Route="AddRecipe" />
        <ShellContent
            Title="admin page"
            ContentTemplate="{DataTemplate views:AdminPageView}"
            IsVisible="{Binding IsManager}"
            Route="AdminPage" />

        <!--  add info page  -->
        <!--<ShellContent
            Title="info page"
            ContentTemplate="{DataTemplate views:}"
            />-->

    </TabBar>

</Shell>
